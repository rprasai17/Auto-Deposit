{
  "manifest_version": 3,
  "name": "Room Price Calculator",
  "version": "0.0.1",
  "description": "Easily calculate room prices before taxes",
  "icons": {
    "16": "logo192.png",
    "32": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  
  "permissions": [
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>",
    "https://controlcenter-p2.synxis.com/*",
    "https://*.synxis.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_icon": {
      "16": "logo192.png",
      "32": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "static/*",
        "static/js/*",
        "static/css/*",
        "static/media/*",
        "*.js",
        "*.css",
        "*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}