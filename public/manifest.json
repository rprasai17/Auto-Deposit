
{
  "manifest_version": 3,
  "name": "Room Price Calculator",
  "version": "0.0.1",
  "description": "Easily calculate room prices before taxes",
  "icons": {
    "16": "logo192.png",
    "32": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://controlcenter-p2.synxis.com/*",
    "https://*.synxis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "logo192.png",
      "32": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "static/js/main.cbaa7084.js",
        "static/js/453.faca7261.chunk.js",
        "static/css/main.da16b67b.css",
        "static/media/*",
        "*.js",
        "*.css",
        "*.png",
        "*.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}